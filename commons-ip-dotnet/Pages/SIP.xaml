<local:ExtendedPage x:Class="SIP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonsIP4Net"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SIP">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:HeaderControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" TitleHeader="SIP creation" DescriptionHeader="Choose the path to save the SIP package" />
        <Button Content="Location.." Style="{StaticResource MetroButton}" Grid.Row="2" Grid.Column="1" Click="SaveSIP_Click" Margin="25,24,25,0" Height="42" VerticalAlignment="Top"/>
    </Grid>
</local:ExtendedPage>
