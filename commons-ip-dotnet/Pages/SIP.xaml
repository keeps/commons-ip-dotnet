<local:ExtendedPage x:Class="SIP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonsIP4Net"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SIP">
    <Grid>
        <TextBox TextChanged="FilePath_TextChanged" Name="FilePath" Text="Please find a location to create a new SIP file" IsEnabled="False" Margin="10,197,90,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top"/>
        <Button Content="Location.." Margin="0,198,10,0" HorizontalAlignment="Right" Width="75" Click="SaveSIP_Click" Height="20" VerticalAlignment="Top"/>
        <Label Content="Create SIP" Height="33" Margin="150,50,150,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
    </Grid>
</local:ExtendedPage>
