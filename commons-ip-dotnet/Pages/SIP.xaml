        <Image Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="Image_MouseLeftButtonUp" DockPanel.Dock="Left" Source="pack://siteoforigin:,,,/Resources/Images/icons8-save-as-100.png" Margin="0,158,20,0" Height="29" VerticalAlignment="Top" HorizontalAlignment="Right" Width="28"/>
        <Label Grid.Column="0" Grid.Row="0" Padding="0,5,0,0" Content="Current status: " Margin="20,196,20,0" Height="26" VerticalAlignment="Top"/>
        <ProgressBar x:Name="ProgressBarStatus" Margin="20,227,20,0" Height="9" VerticalAlignment="Top"/>


    </Grid>
