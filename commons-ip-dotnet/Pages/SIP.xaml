      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommonsIP4Net"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SIP">
    <Grid  >
        <local:HeaderControl Grid.Column="0" Grid.Row="0" TitleHeader="Select destination file and create package" DescriptionHeader="Select the destination file were the new E-ARK SIP will be saved by clicking the Location button.vbnewline Click the Finish button to create the new package file. " Margin="10,10,10,0" VerticalAlignment="Top" Height="121" />
